<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:focusable="true"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/checkBoxList"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="58dp"
        android:layout_height="44dp"
        android:layout_gravity="end"

        android:layout_marginTop="10dp"
        android:button="@android:drawable/btn_star"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:scrollbarThumbHorizontal="@drawable/backpack"
        android:scrollbarTrackHorizontal="@drawable/cap"
        android:scrollbarTrackVertical="@drawable/cap"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        android:textCursorDrawable="@android:drawable/btn_star" />


    <ImageView
        android:id="@+id/productsImageView"
        android:layout_width="350dp"
        android:layout_height="320dp"


        android:padding="10dp"
        android:scaleType="fitCenter"





        />

    <TextView
        android:id="@+id/nameTeview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="false"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="Android Version"
        android:textAlignment="textStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="16sp"
        android:typeface="serif" />


    <TextView
        android:id="@+id/price"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingLeft="25dp"
        android:text="85,99 zÅ‚"
        android:textAlignment="textStart"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />




</LinearLayout>